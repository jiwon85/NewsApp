<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.inf385t.jiwon_85.newsapp.NewsListActivity">



    <Space android:id="@+id/dummy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plusButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="#FF2B8DA3" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleText"
        android:layout_above="@+id/filterButton"
        android:layout_marginTop="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/refreshButton"
        android:layout_alignBaseline="@+id/plusButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#FF2B8DA3" />

    <ToggleButton
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Recent"
        android:id="@+id/recentToggle"
        android:textOn="Recent"
        android:textOff="Recent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/dummy"
        android:backgroundTint="#FF2B8DA3"
        android:textSize="10dp" />

    <ToggleButton
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Popular"
        android:id="@+id/popularToggle"
        android:textOff="Popular"
        android:textOn="Popular"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/dummy"
        android:backgroundTint="#FF2B8DA3"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All News"
        android:id="@+id/titleText"
        android:layout_below="@+id/recentToggle"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter Results"
        android:id="@+id/filterButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF2B8DA3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logoutButton"
        android:layout_alignBottom="@+id/filterButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#FF2B8DA3" />

</RelativeLayout>

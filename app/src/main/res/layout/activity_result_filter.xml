<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.inf385t.jiwon_85.newsapp.ResultFilterActivity">



    <AutoCompleteTextView
        android:id="@+id/autocomplete_places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/autocomplete_hint"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/button_clear"
        android:layout_toLeftOf="@+id/button_clear"
        android:layout_toStartOf="@+id/button_clear"
        android:inputType="textEmailSubject"
        android:textColorHint="#FF2B8DA3"
        android:textColor="#FF2B8DA3" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_text"
        android:layout_marginTop="123dp"
        android:layout_below="@+id/otherButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#FF2B8DA3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Politics"
        android:id="@+id/politicsButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:backgroundTint="#FF2B8DA3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Business"
        android:id="@+id/businessButton"
        android:layout_below="@+id/politicsButton"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF2B8DA3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tech"
        android:id="@+id/techButton"
        android:layout_below="@+id/businessButton"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF2B8DA3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Entertainment"
        android:id="@+id/entertainmentButton"
        android:layout_below="@+id/techButton"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF2B8DA3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:id="@+id/sportsButton"
        android:layout_below="@+id/entertainmentButton"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF2B8DA3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Science"
        android:id="@+id/scienceButton"
        android:layout_below="@+id/sportsButton"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF2B8DA3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Health"
        android:id="@+id/healthButton"
        android:layout_below="@+id/scienceButton"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF2B8DA3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Other"
        android:id="@+id/otherButton"
        android:layout_below="@+id/healthButton"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF2B8DA3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By City"
        android:id="@+id/cityView"
        android:layout_above="@+id/autocomplete_places"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Category"
        android:id="@+id/categoryText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />


</RelativeLayout>
